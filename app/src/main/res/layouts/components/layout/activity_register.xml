<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/judul_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="@dimen/def_margin"
            android:gravity="center_horizontal"
            android:text="Mulai Terhubung Dengan Kami"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ilustration"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/muslim"/>


        <LinearLayout
            android:id="@+id/inpt_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_seconday_background"
            android:clipToPadding="false"
            android:gravity="center"
            android:padding="10dp">

            <EditText
                android:id="@+id/etEmailReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/def_margin_half"
                android:layout_marginRight="@dimen/def_margin_half"
                android:background="@android:color/transparent"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inpt_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_seconday_background">

            <EditText
                android:id="@+id/etPasswordReg"
                android:hint="password"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/def_margin_half"
                android:layout_marginRight="@dimen/def_margin_half"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/def_margin"
            android:layout_centerHorizontal="true"
            android:text="Daftar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_primary_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sudah Punya Akun ? "
                android:textColor="@color/DarkGray"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnLogin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Masuk"
                android:textColor="#8DA05E"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>